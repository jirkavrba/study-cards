<!DOCTYPE html>
<html>
<head>
  <title>StudyCards</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
<nav class="green">
  <div class="nav-wrapper">
    <div class="container">
      <a href="<%= dashboard_path %>" class="brand-logo">Study cards</a>
      <% if user_signed_in? %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>
            <%= link_to current_user.email, edit_registration_path(current_user) %></li>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>
            <%= link_to "Log in", new_user_session_path %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
<% unless notice.nil? %>
  <div class="indigo darken-4 indigo-text text-lighten-4" id="notice">
    <div class="container">
      <p>
        <%= notice %>
      </p>
    </div>
  </div>
<% end %>
<% unless alert.nil? %>
  <div class="red accent-3 red-text text-lighten-4" id="alert">
    <div class="container">
      <p>
        <b><%= alert %></b>
      </p>
    </div>
  </div>
<% end %>


<div class="app-container container">
  <%= yield %>
</div>

<footer class="page-footer indigo darken-3">
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        <h5 class="white-text">Study cards</h5>
        <p class="grey-text text-lighten-4">This app is open source and licensed under the MIT license.</p>
      </div>
      <div class="col l4 offset-l2 s12">
        <h5 class="white-text">Links</h5>
        <ul>
          <li>
            <a class="blue-text text-lighten-3" href="https://github.com/jirkavrba/study-cards" target="_blank">Source
              code</a>
          </li>
          <li>
            <a class="blue-text text-lighten-3" href="https://github.com/jirkavrba/study-cards/issues/new" target="_blank">Report
              a bug / Suggest a feature</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright indigo darken-4">
    <div class="container">
      &copy;2020 Jiří Vrba
    </div>
  </div>
</footer>
</body>
</html>
