<div class="card">
  <div class="card-content">
    <span class="card-title">Create a new collection</span>
    <div class="row">
      <div class="col s12">
        <%= form_with url: collection_index_path, method: :post do %>
          <div class="row">
            <div class="col s12">
              <div class="input-field">
                <%= label_tag "Title" %>
                <%= text_field :collection, :title, autofocus: true %>
              </div>
            </div>

            <div class="col s12">
              <%= label_tag "Visibility" %>
              <div class="input-field">
                <p>
                  <label>
                    <%= radio_button(:collection, :is_private, true, class: 'with-gap', checked: true) %>
                    <span><b class="black-text">Private</b> &mdash; this collection can be only viewed by you</span>
                  </label>
                </p>
              </div>
              <div class="input-field">
                <p>
                  <label>
                    <%= radio_button(:collection, :is_private, false, class: 'with-gap') %>
                    <span><b class="black-text">Public</b> &mdash; everybody with a link will be able to view this collection</span>
                  </label>
                </p>
              </div>
            </div>
          </div>
          <div class="actions right">
            <%= submit_tag 'Create', class: 'btn-large indigo' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
